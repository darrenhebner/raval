{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "types": ["@cloudflare/workers-types", "node"],
    "lib": ["ES2024"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strictNullChecks": true,
  },
  "include": [
    "worker-configuration.d.ts",
    "server.ts",
    "app/**/*",
    "shared/**/*",
    "workflows/**/*",
  ],
}
